модуль оператор_цикл_с_индексом

// 6.10. Оператор цикл
/*
Оператор позволяет задать две переменные цикла или только одну из них. В
теле цикла, значением переменной индекса, заданной в квадратных скобках, яв-
ляется текущий индекс (от 0 до длины-1), а переменной элемента - значение эле-
мента по этому индексу.
*/

тип Числа = []Цел64

вход {
    пусть числа := Числа[1, 2, 3]
    пусть сумма := 0
    цикл [индекс] среди числа {
        сумма := сумма + индекс
    }
    надо сумма = 3 иначе авария("0 + 1 + 2 != 3")
}