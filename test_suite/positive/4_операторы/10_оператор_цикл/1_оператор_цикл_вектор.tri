модуль оператор_цикл_вектор

// 6.10. Оператор цикл
/*
Выражение цикла должно быть индексируемым, то есть
• тип выражения должен быть типом вектора
*/

тип Числа = []Цел64

вход {
    пусть сумма := 0
    пусть вектор := Числа[1, 2, 3]
    цикл число среди вектор {
        сумма := сумма + число
    }
    надо сумма = 6 иначе авария("1 + 2 + 3 != 6")
}