модуль оператор_прервать_в_цикл

// 6.11. Оператор 'прервать'
/*
Оператор прервать завершает выполнение самого внутреннего оператора цикла в
рамках одной и той же функции.
*/

тип Числа = []Цел64

вход {
    пусть числа := Числа[1, 2, 3]
    пусть сумма := 0
    цикл число среди числа {
        если число > 2 {
            прервать
        }
        сумма := сумма + число
    }
    надо сумма = 3 иначе авария("1 + 2 != 3")
}